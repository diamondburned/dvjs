{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
		"indent": ["error", 4, {
			"SwitchCase": 1
		}],
		"comma-dangle": ["error", "always-multiline"],
		"quotes": ["error", "double"],
		"array-bracket-spacing": ["error", "never", {
			"singleValue": true
		}]
	}
}
